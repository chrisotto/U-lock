<script>var bikes = <%= @bikes.to_json %></script>
<div>
  <h1>Stolen Bikes!</h1>
  <% if session[:user_id] %>
    <a href="/sessions/delete">Log out</a><br>
    <p>See where bikes were stolen near
      <form class="inline" method="post" action="/bikes">
        <input id="address" type="text" name="address" value="<%= @address %>">
        <input type="submit" value="Go">
      </form>
    </p>
    <div id="map"></div>
    <% @bikes.each do |bike| %>
      <li><%= bike["title"] %><br>Serial: <%= bike["serial"] %>, Stolen from: <%= bike["stolen_location"] %></li>
    <% end %>
  <% else %>
    <a href="/users/new">Sign up</a><br>
    <a href="/sessions/new">Log in</a>
  <% end %>
</div>
